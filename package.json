{
  "name": "@ibm/plex",
  "description": "The package of IBMâ€™s typeface, IBM Plex",
  "version": "4.0.2",
  "repository": "https://github.com/ibm/plex.git",
  "license": "OFL-1.1",
  "keywords": [
    "eyeglass-module"
  ],
  "bugs": {
    "url": "https://github.com/ibm/plex/issues"
  },
  "scripts": {
    "clean": "rimraf css scss",
    "build": "npm run clean && npm run build:scss && npm run build:css",
    "build:zip": "ts-node scripts/build-zip.ts",
    "build:css": "node-sass scss/ibm-plex.scss --output css && node-sass scss/ibm-plex.scss > css/ibm-plex.min.css --output-style compressed",
    "build:scss": "ts-node scripts/export-scss.ts",
    "precommit": "lint-staged",
    "prettier": "prettier --write \"**/*.{scss}\"",
    "prepare": "yarn build"
  },
  "devDependencies": {
    "@types/node": "^14.0.6",
    "archiver": "^4.0.1",
    "fs-extra": "^9.0.0",
    "git-branch": "^2.0.1",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.7",
    "node-sass": "^4.7.2",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.3"
  },
  "prettier": {
    "printWidth": 80,
    "singleQuote": true,
    "tabWidth": 2,
    "semi": true,
    "trailingComma": "es5"
  },
  "lint-staged": {
    "**/*.js": [
      "prettier",
      "git add"
    ],
    "**/*.scss": [
      "prettier",
      "git add"
    ]
  },
  "eyeglass": {
    "exports": false,
    "name": "ibm-plex",
    "sassDir": "scss",
    "needs": "*"
  },
  "dependencies": {
    "@types/fs-extra": "^9.0.1"
  }
}
